/* hw7_29 */
#include <stdio.h>
#include <stdlib.h>
int main(void)
{
	int input;
	int cnt=0;
	int passwd=6128;
	
	while(1)
	{
		printf("Please enter the password: ");
		scanf("%d", &input);
		cnt++;
		
		if (cnt>=3)
		{
			printf("You have entered the wrong password more than three times!\n");
			break;
		}
		
		if (input == passwd)
		{
			printf("The password entered is correct. Welcome to the system!\n");
			break;
		}
	
	}

 	system("pause");
 	return 0;
}
