/* hw7_3, for loop */
#include <stdio.h>
#include <stdlib.h>
int main(void)   
{
   int i,n,sum=0;
   
   printf("Please enter an odd number: "); 
   scanf("%d",&n);
   
   for(i=1;i<=n;i+=2)                           /* Calculate the sum of 1+3+...+n */
   sum+=i;
   printf("1+3+...+%d=%d\n",n,sum);             /* Print out the sum */
   
   system("pause");
   return 0;
}
