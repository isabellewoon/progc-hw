/* hw9_15 */
#include <stdio.h>
#include <stdlib.h>
int main(void)
{
	int A[2][4][3]={{{21,32,65},
                   {78,94,76},
                   {79,44,65},
                   {89,54,73}},
                  {{32,56,89},
                   {43,23,32},
                   {32,56,78},
                   {94,78,45}}};
	
	int i,j,k,sum=0;

	for(i=1;i<2;i++)
		for(j=0;j<4;j++)
			for(k=0;k<3;k++)
				sum+=A[i][j][k];
				
	printf("The sum of all items in Index 1 of the first dimension is %d\n",sum);

 	system("pause");
 	return 0;
}
