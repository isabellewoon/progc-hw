/* hw9_19, 於函數內更改陣列元素的值 */
#include <stdio.h>
#include <stdlib.h>
#define SIZE 4

void show(int arr[]);		/* 函數show()的原型 */
void square(int arr[]);		/* 函數add2()的原型 */

int main(void)
{
   int a[SIZE]={5,3,6,1};
   printf("呼叫square()前,陣列的內容為: ");   
   show(a);			/* 呼叫函數show() */
   square(a); 			/* 呼叫函數square() */
   printf("呼叫square()後,陣列的內容為: "); 
   show(a); 			/* 呼叫函數show() */
       
   system("pause");
   return 0;
}

void show(int arr[])
{
   int i;
   for(i=0;i<SIZE;i++)	/* 印出陣列內容 */
      printf("%02d ",arr[i]);
   printf("\n");
}

void square(int arr[])
{
   int i;
   for(i=0;i<SIZE;i++)	
      arr[i]=(arr[i])*(arr[i]);
}
