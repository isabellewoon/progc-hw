/* hw9_14 */
#include <stdio.h>
#include <stdlib.h>
#define ROW 3
#define COL 4

void show(float arr[][COL]);
void day_average(float arr[][COL]);
void period_average(float arr[][COL]);
void search(float arr[][COL],float b[]);
float average(float arr[][COL]);

int main(void)
{
   float a[ROW][COL]={{18.2f,17.3f,15.0f,13.4f},
   		      {23.8f,25.1f,20.6f,17.8f},
		      {20.6f,21.5f,18.4f,15.7f}}; 
		      
   float b[2];
   
   printf("(a) 印出陣列內容\n");
   show(a);
   
   printf("\n(b) 每日的平均溫度\n");
   day_average(a);
   
   printf("\n(c) 時段一、時段二與時段三的平均溫度\n");
   period_average(a);
   
   search(a,b);
   
   printf("\n(d) 溫度最高的日子與時段 = ?\n");
   
   printf("\n(d)(i) 最高的溫度\n");
   printf("The highest temperature is %.1f degrees Celsius\n",b[0]);
   
   printf("\n(e) 溫度最低的日子與時段 = ?\n");
   
   printf("\n(e)(i) 最低的溫度\n");
   printf("The lowest temperature is %.1f degrees Celsius\n",b[1]);
   
   printf("\n(f) 平均溫度\n");
   printf("The average temperature is %.2f degrees Celsius\n\n",average(a));
   
   system("pause");
   return 0;
}

void show(float arr[][COL])
{
   int i,j;
   for(i=0;i<ROW;i++)
   {
      printf("The temperature in 時段%d is ",i+1);
      for(j=0;j<COL;j++)
         printf("%.1f ",arr[i][j]);
      printf("degrees Celsius\n");
   }
}

void day_average(float arr[][COL])				/* ERROR!!! */
{
   int i,j;
   double sum=0;
   for(j=0;j<COL;j++)
   {
      sum=0;
      for(i=0;i<ROW;i++)
      {
	 sum+=arr[i][j];
      }
	 printf("The average temperature on 星期%d is %.2f\n",j+1,sum/ROW);
   }
}

void period_average(float arr[][COL])
{
   int i,j;
   double sum=0;
   for(i=0;i<ROW;i++)
   {
      sum=0;
      for(j=0;j<COL;j++)
      {
	 sum+=arr[i][j];
      }
	 printf("The average temperature in 時段%d is %.2f\n",i+1,sum/COL);
   }
}

void search(float arr[][COL],float p[])
{
   int i,j;
   p[0]=p[1]=arr[0][0];
   for(i=0;i<ROW;i++)
      for(j=0;j<COL;j++)
      {
         if(p[0]<arr[i][j])
	    p[0]=arr[i][j];
	 if(p[1]>arr[i][j])
	    p[1]=arr[i][j];
      }
}

float average(float arr[][COL])
{
   int i,j;
   double sum=0;
   for(i=0;i<ROW;i++)
      for(j=0;j<COL;j++)
         sum+=arr[i][j];
   return sum/(ROW*COL);
}
