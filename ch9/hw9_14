      for(j=0;j<4;j++)
      {
         printf("%.1f ",temp[i][j]);
         sum+=temp[i][j];
      }
      printf("\nThe average temperature in period %d is %.2f degrees Celsius\n",i+1,sum/4.0);
   }
   printf("\n");
   
   system("pause");
   return 0;
}

float average(int arr[][COL])
{
   int i,j;
   double sum=0;

   for(i=0;i<ROW;i++)
   {
      for(j=0;j<COL;j++)
         sum+=arr[i][j];
   }
   
   return sum/(ROW*COL)
}
