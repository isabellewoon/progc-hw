/* hw9_14 */
#include <stdio.h>
#include <stdlib.h>

float average(int arr[][COL])

int main(void)
{
   int i,j;
   float sum=0;
   float temp[3][4]={{18.2f,17.3f,15.0f,13.4f},
                     {23.8f,25.1f,20.6f,17.8f},
                     {20.6f,21.5f,18.4f,15.7f}};
   
   for(i=0;i<3;i++)
   {
      printf("\nThe temperature in period %d is ",i+1);
      
	  sum=0;
      for(j=0;j<4;j++)
      {
         printf("%.1f ",temp[i][j]);
         sum+=temp[i][j];
      }
      printf("\nThe average temperature in period %d is %.2f degrees Celsius\n",i+1,sum/4.0);
   }
   printf("\n");
   
   system("pause");
   return 0;
}

float average(int arr[][COL])
{
   int i,j;
   double sum=0;

   for(i=0;i<ROW;i++)
   {
      for(j=0;j<COL;j++)
         sum+=arr[i][j];
   }
   
   return sum/(ROW*COL)
}
